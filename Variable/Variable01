public class Variable01 {

	public static void main(String[] args) {

		// 변수 사용 - 시간 출력
		
		int hour = 3;
		int minute = 5;
		
		System.out.println(hour + "시간 " + minute + "분");
		
		int totalMinute = (hour) * 60 + minute;
		
		System.out.println("총 " + totalMinute + "분");
	
		
		// 변수 사용 - 두 값 교환
		int x = 3;
		int y = 5;
		
		System.out.println("x:" + x + " y:" + y);
		
		
		int temp = x;
		x = y;
		y = temp;
		
		System.out.println("x:" + x + " y:" + y);
		
		
	}

}
